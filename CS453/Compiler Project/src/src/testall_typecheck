#!/bin/bash
# Compile the programs
if [[ $* == *--make* ]]; then
	make
fi

for filename in testFiles/*.java; do
	echo "Testing file: "$filename""
	diff -y <(cat "$filename" | java Typecheck 2> /dev/null) <(cat typeCheck/$(basename $filename .java).out)
	echo ""
done

if [[ $* == *--make* ]]; then
	make clean
fi
